<?xml version="1.0" encoding="utf-8"?>

<!--Layout de cada sala de chat-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorLigero"
        android:layout_margin="10dp"
        android:onClick="EntrarSala">
        <!--Imagen de la sala-->
        <ImageView
            android:id="@+id/SalaImagen"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_foto_sala"/>

        <!--Informacion de la sala-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <!--Nombre de la sala-->
            <TextView
                android:id="@+id/SalaNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextoNombrePerfil"
                android:text="Sala Random"/>

            <!--Participantes de la sala-->
            <GridLayout
                android:id="@+id/SalaImagenesUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="7">
            </GridLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>